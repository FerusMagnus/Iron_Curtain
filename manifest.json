{
    "name": "Lite Iron Curtain",
    "version": "1.0.0",
    "manifest_version": 2,
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google-analytics.com; object-src 'self'",

    "description": "Use Iron Curtain",
    "default_locale": "ru",

    "background": {
   		"page": "html/background.html"
    },

    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "images/_.png",
            "38": "images/icon-38.png"
        },
        "default_title": "Lite Iron Curtain",
        "default_popup": "html/actionPopup.html"
    },

    "content_scripts": [
        {
            "js": [
				"js/jquery-2.1.1.js",
                "js/library.js",
                "js/utils.js",
                "js/disablePlugin.js",
				"js/content.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*",
                "file://*"
            ],
            "run_at" : "document_start"
        },
		{
			"js": [
				"js/jquery-2.1.1.js",
				"js/contentBlockPage.js"
            ],
            "matches": [
                "*://adult-blocker.com/*"
            ],
            "run_at" : "document_end"
		}
    ],
	
	"web_accessible_resources": [
		"html/block.html",
		"html/options.html"
	],

	"options_page": "html/pwd.html",


    "permissions": [
        "management",
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}